{
  "manifest_version": 3,
  "name": "Side Panel Clipboard Manager",
  "version": "1.0",
  "description": "A simple clipboard manager that lives in the browser's side panel.",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Clipboard Manager"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}